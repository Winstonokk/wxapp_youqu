/*欢迎页样式 */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.apptip{
  margin-top: 160rpx;
  font-size: 24px;
  color: white;
  font-weight: bold;
}

/* 给页面设置背景色 */
page{
  height: 100%;
  background-color: #d827d7;
}

.appicon {
height: 192rpx;
width: 192rpx;
margin-top: 130rpx;
display: inline-block;
vertical-align: middle;
animation: a 1s steps(12) infinite;
background: transparent url(data:image/svg+xml;base64,) no-repeat;
background-size: 100%;
background-image: '/images/splash_icon.png';
}

@keyframes a {
0% {
-webkit-transform: rotate(0deg);
transform: rotate(0deg);
}
to {
-webkit-transform: rotate(1turn);
transform: rotate(1turn);
}
}


